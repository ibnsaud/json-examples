{
    "tasks": [
        {
            // type of programming language
            "type": "cppbuild",
            // task user-friendly name, can be modified
            "label": "Test build",
            // what program to run (gcc path)
            "command": "C:\\msys64\\mingw64\\bin\\gcc.exe",
            // program command-line arguments (the same as in cmd prompt)
            "args": [
                "-fdiagnostics-color=always",
                // show most commonly compiler warnings
                "-Wall",
                // C99 standart
                "-std=c99",
                // generate debug info for gdb
                "-g",
                // what file to compile (can be modified for multiple files)
                "${file}",
                // output (the same as in cmd prompt)
                "-o",
                // location and extension for the final file
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            // where to run "command"?
            "options": {
                "cwd": "${fileDirname}"
            },
            // output parser for finding errors and warnings in the compiler output
            "problemMatcher": [
                "$gcc"
            ],
            // if you have multiple build tasks in one tasks.json, you can specify which one is default 
            "group": {
                "kind": "build",
                "isDefault": true
            },
            // task desctiption, it's important to set for understanding what the task does
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}